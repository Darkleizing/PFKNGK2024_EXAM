<Window x:Class="PFKNGK1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFKNGK1"
        mc:Ignorable="d"
        Title="Main Page" Height="900" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Сотрудники" Click="EmployeesButton_Click"/>
            <Button Grid.Row="1" Content="Виды расходов" Click="ExpenseCategoriesButton_Click" Margin="0,38,0,183" Grid.RowSpan="2"/>
            <Button Grid.Row="2" Content="Покупки" Click="PurchasesButton_Click" Margin="0,88,0,133" Grid.RowSpan="2"/>
        </Grid>
        <Grid Grid.Column="1">
            <Frame Name="MainFrame" Margin="10,10,10,10"/>
        </Grid>
    </Grid>
</Window>
